@page "/"
@model AddEvent.Pages.AdicionarEventoModel
@{
    ViewData["Title"] = "Formulário";
}

<div class="text-center">
    <h1 class="display-4">Seja bem vindo ao meu TP1.12</h1>
    <h2 class="display-4">Adicionar Eventos</h2>
</div>

<hr />

<div class="w-auto flex items-center justify-center bg-gray-100">
    <form method="post" class="bg-white p-6 rounded-xl shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold mb-4">Adicionar Produto</h2>

        <div class="mb-4">
            <label asp-for="Evento.Titulo" class="block text-left font-medium mb-1">Titulo do Evento</label>
            <input asp-for="Evento.Titulo" type="text"
                   class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                   required />
        </div>

        <div class="mb-4">
            <label asp-for="Evento.Data" class="block text-left font-medium mb-1">Data</label>
            <input type="date"  asp-for="Evento.Data"
                   class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                   required />
        </div>

        <div class="mb-4">
            <label asp-for="Evento.Local" class="block text-left font-medium mb-1">Local</label>
            <input type="text" asp-for="Evento.Local"
                   class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                   required />
        </div>

        <button type="submit"
                class="w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700 transition">
            Adicionar
        </button>

        
    </form>
</div>

@if ((ModelState.IsValid) && (Model.Evento != null))
{
    <div class="alert alert-success mt-3">
        Evento adicionado: <strong>@Model.Evento</strong>
    </div>
}
